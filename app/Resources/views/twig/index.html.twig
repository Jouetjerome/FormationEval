{% extends 'base.html.twig' %}


{% block body %}

    {#
        lien : utilise le nom des routes ~ @Route("/URL", name = "NOM UNIQUE")
            url ; lien absolu
            path : lien relatif
                1er paramètre : nom de la route
                2ème paramètre : valeur des variable d'URL
        ressources externes
    #}

<p><a href="{{ url('homepage') }}">Acceuil</a> </p>
<p><a href="{{ url('hello',{'name' : 'Hitema'}) }}">Hello Hitema</a> </p>
<img src="{{ asset('img/logo.png') }}">




    Nous somme le {{ now | date('d/m/Y') }}

{% set length = list | length %}

    <p>Il y à {{ length }} éléments</p>

{% for value in list %}
    {{ value | upper | reverse }}
{% endfor %}

{#
    set : creation d'une variable
#}

{%  set meteo = 'neige' %}

{%  if meteo == 'soleil' %}
    <p>Soleil</p>
{% elseif meteo == 'neige'%}
    <p>Neige</p>
{% else %}
    <p>Nuageux</p>
{% endif %}

{% endblock %}
