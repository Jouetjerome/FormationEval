{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <div class="row">
        <div class="col">
            <ul class="nav nav-pills">
                <li class="nav-item"><a href="#" class="nav-link"><i class="fas fa-home"></i></a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h1>{{ results.titre }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="card">
            <img src="http://dummyimage.com/400x400/000/fff.jpg&text=book1" alt="cover" class="img-fluid card-img-left" />
            <div class="card-body">
                <p><strong class="text-uppercase">{{ results.auteur }}</strong></p>
                <p><strong class="text-uppercase">{{ results.description }}</strong></p>
                <p><strong class="text-uppercase">{{ results.dateDePublication.format("d-m-Y") }}</strong></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}